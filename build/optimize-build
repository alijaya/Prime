#!/bin/bash

MINPARAMS=1

INPUT="$1"
OUTPUT="build/tmp_tdsi.swf"

#echo "input: $INPUT"
#echo "output: $OUTPUT"

if [ -f build/environment.sh ]; then
	source build/environment.sh

	java -jar build/tdsi.jar -finalize true -dead-code-elimination true -input "$INPUT" -output "$OUTPUT"
	"$MXMLC_OPTIMIZER" "$OUTPUT" -output "$INPUT"
	rm "$OUTPUT"
fi;